<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_news_list_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/item_news_list_padding">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_list_item"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_news_list_logo"
                    android:layout_width="@dimen/item_news_list_logo_size"
                    android:layout_height="@dimen/item_news_list_logo_size"
                    android:layout_gravity="center"
                    android:padding="@dimen/item_news_list_logo_padding"
                    android:src="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_news_list_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/item_news_list_text_padding"
                            android:paddingStart="@dimen/item_news_list_text_padding"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/item_news_list_text_date_size"
                            tools:text="12:45 01.10.2016" />

                        <TextView
                            android:id="@+id/item_news_list_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/item_news_list_text_date_size"
                            tools:text="Категорія - Світ" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/item_news_list_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingTop="@dimen/item_news_list_text_padding"
                        android:textSize="@dimen/item_news_list_text_title_size"
                        android:textStyle="normal|bold"
                        tools:text="Ви не повірите коли прочитате це: У селі Нижчепупенці згоріла стодола. " />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/item_news_list_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_news_list_text_padding"
                tools:text="бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-
                бла-бла-бла-бла-бла-бла-бла-бла-бла-
    бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-
    бла-бла-бла-бла-бла-бла-
    бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-бла-
    бла-бла-бла-бла-бла-бла" />

            <TextView
                android:id="@+id/item_news_list_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_news_url"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:padding="@dimen/item_news_list_text_padding"
                android:scrollHorizontally="true"
                tools:text="http://www.pravda.com.ua/novunu/2345678rrrrrrrrrrrrrrrrrrrrrrr" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>